<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.finclaw.data.account.AccountMapper">
    <insert id="createNewAccount" parameterType="com.example.finclaw.po.User" useGeneratedKeys="true" keyProperty="userID">
        insert into User(email, password, phoneNumber, username, role, cooperation, cooperationID)
        values(#{email},#{password},#{phoneNumber},#{username},#{role},#{cooperation},#{cooperationID})
    </insert>
    <select id="getAccountByEmail" resultMap="User">
        select * from User where email=#{email}
    </select>
    <select id="getAccountById" resultMap="User">
        select * from User where userID=#{userID}
    </select>
    <select id="getAllDataManagers" resultType="com.example.finclaw.po.User">
        select * from User where role='DataManager'
    </select>
    <update id="updatePassword">
        update user set password=#{newPassword} where userID=#{userID}
    </update>
    <update id="updateUserInfo">
        update USER set email=#{email},
                         username=#{username},
                        phoneNumber=#{phoneNumber}
        where userID=#{userID}
    </update>
    <delete id="deleteUser">
        delete from USER where userID=#{userID}
    </delete>

    <resultMap id="User" type="com.example.finclaw.po.User">
        <id column="userID" property="userID"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="username" property="username"/>
        <result column="phoneNumber" property="phoneNumber"/>
        <result column="role" property="role"/>
        <result column="cooperation" property="cooperation"/>
        <result column="cooperationID" property="cooperationID"/>
    </resultMap>
</mapper>